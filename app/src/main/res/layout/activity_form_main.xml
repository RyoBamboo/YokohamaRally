<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dr.yokohamarally.activities.SettingActivity">
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity ="center"
        >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/title_grad"
            android:text="スタンプラリー情報"
            android:textColor="#fff"
            />

        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ラリー名"
                android:layout_weight="5"
                />




            <EditText
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:id="@+id/rarry_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(例)のんびり観光ラリー"
                android:layout_weight="2"
                android:background="@drawable/round_corner_list"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ラリー概要"
                android:layout_weight="5"
                />


            <EditText
                android:padding="12dp"
                android:layout_marginTop="5dp"

                android:id="@+id/rarry_sammary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="(例)一日のんびり横浜を観光できます。\n日ごろのストレスを解消してください。"
                android:background="@drawable/round_corner_list"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="イメージ画像"
                android:layout_weight="5"
                />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            >




            <ImageView
                android:id="@+id/image_sammary"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/noimage"/>

            <Button
                android:id="@+id/select"
                android:text="概要画像選択"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_marginLeft="18dp"
               />

        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/title_grad"
            android:text="チェックポイント情報"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            />



       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/purasu_button"
         android:text="ポイントを増やす"
         android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainasu_button"
            android:text="ポイントを減らす"
            android:layout_weight="1"
            />

           </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        </LinearLayout>
        <Button
            android:id="@+id/submit"
            android:text="ラリーを投稿を保存"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cancel"
            android:text="キャンセル"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ListView android:id="@+id/sidebar_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
