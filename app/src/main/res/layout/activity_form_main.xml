<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dr.yokohamarally.activities.SettingActivity">


    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity ="center"
        >




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@drawable/title_grad"
            android:text="スタンプラリー情報"
            android:textColor="#fff"
            android:textSize="18sp"
            android:paddingLeft="@dimen/activity_horizontal_margin"

            />

            </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ラリー名"
                />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:background="@drawable/round_corner_list"
                android:padding="10dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                >

            <EditText
                android:id="@+id/rarry_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(例)のんびり観光ラリー"
                android:gravity="center_vertical"


                />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ラリー概要"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:padding="10dp"
                android:background="@drawable/round_corner_list"
                >
            <EditText

                android:id="@+id/rarry_sammary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(例)一日のんびり横浜を観光。"
                />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="イメージ画像"
                android:layout_weight="5"
                />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            >




            <ImageView
                android:id="@+id/image_sammary"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/noimage"/>

            <Button
                android:id="@+id/select"
                android:text="概要画像選択"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
               />


        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:background="@drawable/title_grad"
            android:text="チェックポイント情報"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            />



       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
           android:paddingRight="@dimen/activity_horizontal_margin"
           android:paddingLeft="@dimen/activity_horizontal_margin">

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/purasu_button"
         android:text="ポイントを増やす"
         android:textSize="14sp"
         android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainasu_button"
            android:text="ポイントを減らす"
            android:textSize="14sp"
            android:layout_weight="1"
            />

           </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/submit"
            android:text="マイラリーを投稿"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cancel"
            android:text="キャンセル"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    </ScrollView>


</RelativeLayout>
